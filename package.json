{
  "name": "root",
  "description": "Polywrap Registry",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/polywrap/registry"
  },
  "workspaces": {
    "packages": [
      "./packages/**/*"
    ]
  },
  "scripts": {
    "reset": "yarn clean && yarn bootstrap && yarn build",
    "clean": "npx rimraf ./**/node_modules ./**/build ./**/cache ./**/artifacts && lerna clean",
    "bootstrap": "lerna bootstrap",
    "build": "yarn build:registry-core-js && yarn build:registry  && yarn build:registry-js && yarn build:registry-test-utils && yarn build:verifier-client  && yarn build:e2e",
    "build:registry-core-js": "lerna run build --scope registry-core-js",
    "build:registry": "lerna run build --scope registry",
    "build:e2e": "lerna run build --scope e2e",
    "build:registry-js": "lerna run build --scope registry-js",
    "build:registry-test-utils": "lerna run build --scope registry-test-utils",
    "build:verifier-client": "lerna run build --scope verifier-client",
    "lint": "yarn lint:registry-core-js && yarn lint:registry  && yarn lint:registry-js && yarn lint:registry-test-utils && yarn lint:verifier-client  && yarn lint:e2e",
    "lint:registry-core-js": "lerna run lint --scope registry-core-js",
    "lint:registry": "lerna run lint:ts --scope registry",
    "lint:e2e": "lerna run lint --scope e2e",
    "lint:registry-js": "lerna run lint --scope registry-js",
    "lint:registry-test-utils": "lerna run lint --scope registry-test-utils",
    "lint:verifier-client": "lerna run lint --scope verifier-client",
    "fix": "yarn fix:registry-core-js && yarn fix:registry  && yarn fix:registry-js && yarn fix:registry-test-utils && yarn fix:verifier-client  && yarn fix:e2e",
    "fix:registry-core-js": "lerna run fix --scope registry-core-js",
    "fix:registry": "lerna run fix:ts --scope registry",
    "fix:e2e": "lerna run fix --scope e2e",
    "fix:registry-js": "lerna run fix --scope registry-js",
    "fix:registry-test-utils": "lerna run fix --scope registry-test-utils",
    "fix:verifier-client": "lerna run fix --scope verifier-client",
    "format": "prettier --write \"./**/*.{js,ts}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.0",
    "lerna": "^3.22.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2"
  }
}
