{
  "name": "root",
  "description": "Polywrap Registry",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/polywrap/registry"
  },
  "workspaces": {
    "packages": [
      "./packages/**/*"
    ]
  },
  "scripts": {
    "reset": "yarn clean && yarn bootstrap && yarn build",
    "clean": "npx rimraf ./**/node_modules ./**/build ./**/cache ./**/artifacts && lerna clean",
    "bootstrap": "lerna bootstrap",
    "build": "yarn build:registry && yarn build:e2e && yarn build:registry-js && yarn build:registry-test-utils && yarn build:verifier-client",
    "build:registry": "lerna run build --scope registry",
    "build:e2e": "lerna run build --scope e2e",
    "build:registry-js": "lerna run build --scope registry-js",
    "build:registry-test-utils": "lerna run build --scope registry-test-utils",
    "build:verifier-client": "lerna run build --scope verifier-client"
  },
  "devDependencies": {
    "lerna": "3.22.1",
    "rimraf": "3.0.2",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.0",
    "prettier": "2.2.1"
  }
}
